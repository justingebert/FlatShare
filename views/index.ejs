<h1 class="text-3xl font-bold mb-4">Welcome to FlatShare</h1>

<div class="container mx-auto p-4">
  <div class="bg-black text-white p-2 mb-4">Important</div>
  <% todos.forEach(todo=> { %>
    <div class="flex items-center mb-2">
      <h5 class="mr-2"><%= todo.name %></h5>
      <% let checked = todo.completed ? "checked" : "" %>
      <input type="checkbox" <%= checked %> class="form-checkbox h-5 w-5" />
    </div>
  <% }); %>
</div>

<div class="container mx-auto p-4">
  <div class="mb-4">Cleaning</div>
  <% rooms.forEach(room=> { %>
    <div class="flex items-center mb-2">
      <h5 class="mr-2"><%= room.name %></h5>
      <div><%= room.assigne %></div>
      <button class="bg-blue-500 hover:bg-blue-600 text-white px-2 py-1 rounded">Done</button>
    </div>
  <% }); %>
</div>

<div class="container mx-auto p-4">
  <div class="mb-4">Shopping</div>
  <% shoppingList.forEach(item=> { %>
    <div class="flex items-center mb-2">
      <h5 class="mr-2"><%= item.name %></h5>
      <button class="bg-blue-500 hover:bg-blue-600 text-white px-2 py-1 rounded">Done</button>
    </div>
  <% }); %>
</div>

<div class="container mx-auto p-4">
  <div class="mb-4">Finances</div>
  <% bills.Overall %>
  <% bills.owe.forEach(bill=> { %>
    <div class="flex items-center mb-2">
      <h5 class="mr-2"><%= bill.name %></h5>
      <div><%= bill.amount %></div>
    </div>
  <% }); %>
</div>

<div class="container mx-auto p-4">
  <div class="mb-4">People - Who is Home</div>
  <% people.forEach(person=> { %>
    <div class="flex items-center mb-2">
      <h5 class="mr-2"><%= person.name %></h5>
      <div><%= person.status %></div>
    </div>
  <% }); %>
</div>

<div class="container mx-auto p-4">
  <div class="mb-4">Upcoming</div>
  <% events.forEach(event=> { %>
    <div class="flex items-center mb-2">
      <h5 class="mr-2"><%= event.name %></h5>
      <div><%= event.date %></div>
    </div>
  <% }); %>
</div>

<div class="container mx-auto p-4">
  <div class="mb-4">For Me</div>
  <% tasks.forEach(task=> { %>
    <div class="flex items-center mb-2">
      <h5 class="mr-2"><%= task.name %></h5>
      <div><%= task.date %></div>
      <button class="bg-blue-500 hover:bg-blue-600 text-white px-2 py-1 rounded">Done</button>
    </div>
  <% }); %>
</div>
