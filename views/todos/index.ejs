<div class="bg-gray-900 text-white">
  <div class="container mx-auto p-4">
    <h2 class="text-3xl font-bold mb-4">Todos</h2>
    <div class="grid grid-cols-2 gap-4">
      <% todos.forEach(todo => { %>
        <div class="flex items-center justify-between border-2 border-blue-500 px-3 py-2 rounded">
          <h5><%= todo.name %></h5>
          <% let checked = todo.completed ? "checked" : "" %>
          <input type="checkbox" class="form-checkbox h-5 w-5 text-blue-500" <%= checked %> />
        </div>
      <% }); %>
    </div>
  </div>

  <div class="border-2 border-red-100 p-4 mt-4">
    <form action="/todos" method="post">
      <div class="mb-4">
        <label class="block">Input Name:</label>
        <input type="text" name="name" class="border p-2 bg-background" />
      </div>
      <div class="mb-4">
        <label class="block">Completed?</label>
        <input type="checkbox" name="completed" value="false" class="form-checkbox h-5 w-5 text-blue-500" />
      </div>
      <input type="submit" name="submit" value="Submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" />
    </form>
  </div>
</div>
