<h2>Shopping List Table</h2>
<div><%- include("_shoppingModal")%></div> 
<table class="table">
  <thead>
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% shopping.forEach(shopping => { %>
    <tr>
      <td>
        <a class=" text-red-500 " href="<%= `/shopping/${shopping._id}` %>">
          <%= shopping.item %>
        </a>
      </td>
      <td>
        <%= shopping.quantity %>
      </td>
      <td>
        <a href="<%= `/shopping/${shopping._id}/edit` %>">
          Edit
        </a>
      </td>
      <td>
        <a href="<%= `/shopping/${shopping._id}/delete` %>" onclick="return confirm('Are you sure you want to delete this Item?')">
            Delete
        </a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>

<div class="data-form">
  <form action="/shopping/create" method="POST">
    <h2>Add a new Item:</h2>
    <label for="inputItem">Item</label>
    <input type="text" name="item" id="inputItem" placeholder="Item" autofocus>
    
    <label for="inputQuantity">Quantity</label>
    <input type="number" name="quantity" min="1" max="100" step="1" id="inputQuantity" required>
  
    <button class="btn btn-lg btn-primary btn-block" type="submit">Add</button>
  </form>
</div> 