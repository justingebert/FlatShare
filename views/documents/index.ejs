<h2>Documents Table</h2>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Path</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% documents.forEach(documents => { %>
    <tr>
      <td>
          <%= documents.title %>
        </a>
      </td>
      <td>
        <%= documents.path %>
      </td>
      <td>
        <%= documents.category %>
      </td>
      <td>
        <a class="button" href="<%= `/documents/${documents._id}` %>">Show</a>      
      </td>
      <td>
         <a href="<%= `documents/${documents._id}delete=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
      </td>
    </tr>
    <% }); %>
    <div class="center">
      <a class="button" href="/documents/new">Create Document</a>
    </div>
  </tbody>
</table>